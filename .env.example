# Environment Configuration
# Copy this file to .env.local and fill in the values

# Current environment: 'local' or 'prod'
NEXT_PUBLIC_ENV=

# Investment API Base URL
# Local: http://localhost:3000
# Prod: Your AWS API Gateway URL
INVESTMENT_API_BASE_URL=

# API Gateway URL (optional, used as fallback in prod environment)
API_GATEWAY_URL=

# Stock API Base URL
# Local: http://127.0.0.1:8000 (default)
# Prod: Your stock API service URL
STOCK_API_BASE_URL=

# Cases App URL (for iframe embedding)
# Local: Optional, can be empty or a local URL
# Prod: Production URL for the cases application
NEXT_PUBLIC_CASES_APP_URL=

# Blog URL (external link)
NEXT_PUBLIC_BLOG_URL=
